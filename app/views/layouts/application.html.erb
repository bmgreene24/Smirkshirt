<!DOCTYPE html>
<html>
<head>
  <title>Smirkshirt</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body style="background: #eeeed4;">

<%= image_tag("logo.png", :alt => "logo") %><br />
| <%= link_to "Shop", products_path %> |
<%= link_to "Leave Site", :controller => "welcome", :action => "thank_you" %> |
<%= link_to "Register", :controller => "welcome", :action => "register" %> |
<%= link_to "Home", :controller => "welcome", :action => "home" %> |


<div id='header'>
  <% if logged_in? %>
      <%= current_user.email %> |
      <%= link_to 'Logout', logout_path %> |
      <%= link_to "Create User", new_user_path %> |
  <% else %>
      <%= link_to "Login", login_path %> |
  <% end %>
</div>

<%= yield %>


</body>
</html>
